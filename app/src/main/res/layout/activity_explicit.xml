<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpip.finki.ukim.mk.lab01.ExplicitActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explicit_activity_edit_text"/>

    <Button
        android:id="@+id/explicit_activity_button_okay"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/explicit_activity_edit_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/button_okay"/>

    <Button
        android:id="@+id/explicit_activity_button_close"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/explicit_activity_button_okay"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="@string/button_close"/>

</RelativeLayout>
